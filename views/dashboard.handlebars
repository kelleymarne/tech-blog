<section>
  <h2>Create New Post</h2>

<div id="post">
<div class="mb-3">
  <label for="newPost" class="form-label">Post Title</label>
  <input type="title" class="form-control" id="newPost" placeholder="Post Title">
</div>
<div class="mb-3">
  <label for="postContent" class="form-label">Create your new post!</label>
  <textarea class="form-control" id="postContent" rows="3"></textarea>
</div>
    <button type="submit" class="btn">Post</button>
</div>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol class="list-group">
    {{#each posts as |post|}}
    <li class="list-group-item">
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

